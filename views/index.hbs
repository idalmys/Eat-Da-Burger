<section class="container">
  <div class="row ">
    <div class="col-md-6 ">
      <h1>DEVOUR Burger !!!</h1>
        <ul >
          {{#each burguers}}
            {{#unless devoured}}
               <li  class="result">
                  {{burger_id}}.{{burger_name}}
                  <button class="devoured btn " data-id="{{this.burger_id}}" data-devoured="{{this.devoured}}">
                   DEVOUR IT
                  </button>
                </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
      <h1>Devoured Burger !!!</h1>
         <ul >
            {{#each burguers}}
              {{#if devoured}}
                <li>
                  {{burger_id}}. {{burger_name}}
                  <button class="delete btn " data-id="{{this.burger_id}}">
                    DELETE
                  </button>
                </li>
              {{/if}}
            {{/each}}
          </ul>
    </div>
    <div class="col-md-12">
      <h2>Submit your burger</h2>
      <form class="submit-form">
        <div class="form-group ">
          <input class="form-control " type="text" id="burguer_name" name="burguer_name" placeholder="Burger's name" required >
        </div>
        <button class="submit_burguer btn " type="submit">SUBMIT</button>
      </form>
    </div>
  </div>
</section>



